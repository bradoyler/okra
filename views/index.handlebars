
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h3><span class="glyphicon glyphicon-tasks"></span> Test cases</h3>
            <form action='/runall'>
                <div class="input-group">
                    <span class="input-group-addon">BaseURL:</span>
                    <input class="form-control" name="baseUrl" type="text" placeholder="http://test.com">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">Run All Tests</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
            <caption> </caption>
            <thead>
                <tr>
                    <th>Test</th><th>Last Result</th><th>Executed</th>
                </tr>
            </thead>
            <tbody>
            {{#each tests}}
               <tr class="{{#if errMsg}}danger{{/if}}">
                   <th scope="row"><a href="/test/{{id}}">{{id}} - {{name}}</a></th>
                   <td><a href="/testrun/{{lastRunId}}"> {{status}} {{errMsg}}</a></td>
                   <td>{{#if runAt}}{{formatdate runAt}} ago{{/if}}</td>
               </tr>
            {{/each}}
            </tbody>
            </table>
        </div>
    </div>
</div>
